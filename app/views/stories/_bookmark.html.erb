<% params[:story_id] ||= params[:id] %>
<% if @story.bookmarked?(current_user) %>
  <%= link_to image_tag('book.png', :title => 'Unbookmark Story'), star_path(params[:story_id], :story_id => params[:story_id]), :data => { :remote => true, :method => 'delete', :id => params[:story_id] }, :id => 'bookmarked_icon' %>
<% else %>
  <%= link_to image_tag('book.png', :title => 'Bookmark Story'), stars_path(:story_id => params[:id]), :data => { :remote => true, :method => 'post', :id => params[:story_id] }, :id => 'unbookmarked_icon' %> 
<% end %>