<%= form_for @story do |f| %>
  <%= fields_for @story.node do |n| %>
    <%= n.text_field :title, id: "title-field" %>
    <%= n.text_area :content, id: "content-field" %>
    <%= f.file_field :upload %>
    Accepted formats: PDF, DOC, DOCX, TXT, RTF, PAGES, EPUB, MOBI, HTML, GDOC, MD
    <p></p>
    If a file is uploaded, the content field will be appended to the file.
    <p></p>
    <% if @parent_node %>
      <%= n.hidden_field :parent_node, value: @parent_node %>
    <% else %>
      <%= n.hidden_field :parent_node, value: "0" %>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
